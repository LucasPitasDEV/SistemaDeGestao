<Window x:Class="SistemaDeGestao.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaDeGestao"
        xmlns:viewmodels="clr-namespace:SistemaDeGestao.ViewModels"
        xmlns:views="clr-namespace:SistemaDeGestao.Views"
        mc:Ignorable="d"
        Title="Gerenciamento de Vendas" Height="600" Width="900">

    <Window.DataContext>
        <viewmodels:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#E4003A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#E4003A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseCaptured" Value="True">
                    <Setter Property="Background" Value="#4447EA"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="BorderBrush" Value="LightGray"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#4447EA"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#4447EA"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="10">
            <Button Content="Início" Width="100" Margin="5"
                    Command="{Binding NavigateToInicioCommand}"/>
            <Button Content="Pessoas" Width="100" Margin="5"
                    Command="{Binding NavigateToPessoasCommand}"/>
            <Button Content="Produtos" Width="100" Margin="5"
                    Command="{Binding NavigateToProdutosCommand}"/>
            <Button Content="Pedidos" Width="100" Margin="5"
                    Command="{Binding NavigateToPedidosCommand}"/>
            <Button Content="Controle de Pedidos" Width="150" Margin="5" 
                    Command="{Binding NavigateToPedidosPessoaCommand}"/>
        </StackPanel>

        <ContentControl Grid.Row="1" Content="{Binding CurrentViewModel}">
            <ContentControl.Resources>
                <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
                    <views:HomeView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:PessoaViewModel}">
                    <views:PessoaView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:ProdutoViewModel}">
                    <views:ProdutoView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:PedidoViewModel}">
                    <views:PedidoView/>
                </DataTemplate>
                <DataTemplate DataType="{x:Type viewmodels:PedidoPessoaViewModel}">
                    <views:PedidoPessoaView/>
                </DataTemplate>
            </ContentControl.Resources>
        </ContentControl>
    </Grid>
</Window>