<UserControl x:Class="SistemaDeGestao.Views.PedidoPessoaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SistemaDeGestao.Views"
             xmlns:viewmodels="clr-namespace:SistemaDeGestao.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900"
             d:DataContext="{d:DesignInstance viewmodels:PedidoPessoaViewModel}">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Padding="15" CornerRadius="5" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Selecione a Pessoa:" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>

                <ComboBox Width="250"
                          ItemsSource="{Binding Pessoas}"
                          SelectedItem="{Binding PessoaSelecionada}"
                          DisplayMemberPath="Nome"/>

                <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock Text="Filtros:" FontWeight="Bold" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <CheckBox Content="Apenas Entregues" IsChecked="{Binding ShowOnlyEntregues}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <CheckBox Content="Apenas Pagos" IsChecked="{Binding ShowOnlyPagos}" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <CheckBox Content="Apenas Pendentes" IsChecked="{Binding ShowOnlyPendentes}" VerticalAlignment="Center"/>
                    <CheckBox Content="Apenas Enviados" IsChecked="{Binding ShowOnlyEnviados}" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Pedidos}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  Height="450">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID do Pedido" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Data da Venda" Binding="{Binding DataDaVenda, StringFormat='dd/MM/yyyy'}" Width="*"/>
                <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat='C'}" Width="*"/>
                <DataGridTextColumn Header="Forma de Pagamento" Binding="{Binding FormaDePagamento}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>

                <DataGridTemplateColumn Header="Ações" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Pago" Margin="5"
                                        Command="{Binding DataContext.MarcarComoPagoCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="Enviado" Margin="5"
                                        Command="{Binding DataContext.MarcarComoEnviadoCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding}"/>
                                <Button Content="Entregue" Margin="5"
                                        Command="{Binding DataContext.MarcarComoEntregueCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>